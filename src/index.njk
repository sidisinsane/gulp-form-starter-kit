{# import macros #}
{% import "./components/form/form.njk" as form with context %}

<form class="form" action="/" method="get" lang="en">
  <div class="fieldset">
    {{form.input(
      label="Name",
      id="name",
      required="true",
      valueMissing="We really need your fullname!"
    )}}

    {{form.input(
      label="Street Address",
      id="street-address",
      required="true",
      valueMissing="We really need your street-address!"
    )}}

    {{form.input(
      label="Postal Code",
      id="postal-code",
      required="true",
      valueMissing="We really need your postal-code!"
    )}}

    {{form.input(
      label="City",
      id="address-level2",
      required="true",
      valueMissing="We really need your city!"
    )}}

    {{form.input(
      label="State",
      id="address-level1",
      required="true",
      valueMissing="We really need your state!"
    )}}
  </div>
  <div class="fieldset">
    {{form.input(
      label="Email",
      type="email",
      id="email",
      pattern="[^@\s]+@[^@\s]+\.[^@\s]+",
      patternMismatch="Your email must be something like foo@bar.tld!",
      required="true",
      valueMissing="We really need your email!"
    )}}

    {{form.input(
      label="Telephone",
      type="tel",
      id="tel",
      required="true",
      valueMissing="We really need your telephone!"
    )}}

    {{form.input(
      label="URL",
      type="url",
      id="url",
      required="true",
      valueMissing="We really need your url!"
    )}}
  </div>
  <div class="fieldset">
    {{form.input(
      label="Apple",
      value="apple",
      type="checkbox",
      id="brands",
      required="true",
      valueMissing="We really need a brand!"
    )}}

    {{form.input(
      label="Microsoft",
      value="microsoft",
      type="checkbox",
      id="brands",
      required="true",
      valueMissing="We really need a brand!"
    )}}

    {{form.input(
      label="Other",
      value="other",
      type="checkbox",
      id="brands",
      required="true",
      valueMissing="We really need a brand!"
    )}}
  </div>
  <div class="fieldset">
    {{form.input(
      label="Apple",
      value="apple",
      type="radio",
      id="brand",
      required="true",
      valueMissing="We really need a brand!"
    )}}

    {{form.input(
      label="Microsoft",
      value="microsoft",
      type="radio",
      id="brand",
      required="true",
      valueMissing="We really need a brand!"
    )}}

    {{form.input(
      label="Other",
      value="other",
      type="radio",
      id="brand",
      required="true",
      valueMissing="We really need a brand!"
    )}}
  </div>

  <div class="fieldset">
    {{form.input(
      value="Submit",
      type="submit"
    )}}
  </div>
</form>
